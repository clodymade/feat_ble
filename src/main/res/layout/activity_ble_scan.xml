<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- BLE 이미지 -->
    <ImageView
        android:id="@+id/ble_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_ble"
        android:contentDescription="NFC Image"
        app:layout_constraintBottom_toTopOf="@id/ble_instruction_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- BLE 안내 문구 -->
    <TextView
        android:id="@+id/ble_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLE 스캔을 합니다."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 닫기 버튼 -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/ic_close"
        android:contentDescription="Close Scanner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>